	pages = {2807--2831},
	file = {PDF:/Users/billyli/Zotero/storage/RG8RISDU/Schady et al. - 2024 - Comparing emission- and absorption-based gas-phase metallicities in GRB host galaxies at z =.pdf:application/pdf},
