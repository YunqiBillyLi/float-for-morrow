	file = {Full Text PDF:/Users/billyli/Zotero/storage/64WMN9VV/Lebouteiller et al. - 2009 - Metal enrichment of the neutral gas of blue compact dwarf galaxies the compelling case of Pox 36.pdf:application/pdf},
}

